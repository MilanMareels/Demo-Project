@page "/addCity"
@rendermode InteractiveServer
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Nieuwe Stad Toevoegen</h3>

<EditForm Model="city" OnValidSubmit="CreateCity">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label class="form-label">Naam</label>
        <InputText class="form-control" @bind-Value="city.Name" />
        <ValidationMessage For="@(() => city.Name)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Aantal Inwoners</label>
        <InputNumber class="form-control" @bind-Value="city.Population" />
        <ValidationMessage For="@(() => city.Population)" />
    </div>

    <div class="mb-3">
        <label class="form-label">Land</label>
        <InputSelect class="form-select" @bind-Value="city.CountryId">
            <option value="">-- Kies een land --</option>
            @foreach (var c in countries)
            {
                <option value="@c.Id">@c.Name</option>
            }
        </InputSelect>
        <ValidationMessage For="@(() => city.CountryId)" />
    </div>

    <button type="submit" class="btn btn-success">Opslaan</button>
    <button type="button" class="btn btn-secondary ms-2" @onclick="GoBack">Annuleren</button>
</EditForm>

