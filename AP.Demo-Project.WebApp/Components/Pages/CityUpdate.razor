@page "/cities/update/{CityId:int}"
@rendermode InteractiveServer
@inject HttpClient Http
@inject NavigationManager Navigation

<h3>Update City</h3>

@if (isLoading)
{
    <div class="spinner-border text-primary" role="status">
        <span class="visually-hidden">Loading...</span>
    </div>
}
else if (city == null)
{
    <p class="text-danger">City not found.</p>
}
else
{
    <EditForm Model="city" OnValidSubmit="UpdateCity">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label class="form-label">Name</label>
            <InputText class="form-control" @bind-Value="city.Name" />
        </div>

        <div class="mb-3">
            <label class="form-label">Population</label>
            <InputNumber class="form-control" @bind-Value="city.Population" />
        </div>

        <div class="mb-3">
            <label class="form-label">Country Id</label>
            <InputNumber class="form-control" @bind-Value="city.CountryId" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <button type="button" class="btn btn-secondary ms-2" @onclick="GoBack">Cancel</button>
    </EditForm>
}
